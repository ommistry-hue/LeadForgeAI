@{
    ViewData["Title"] = "Upload CSV - LeadForge AI";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-cloud-upload"></i> Upload Lead CSV
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-info">
                        <strong>Available Credits:</strong> @ViewBag.AvailableCredits
                        <span class="float-end">
                            <small>1 credit = 1 enriched lead</small>
                        </span>
                    </div>

                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="file" class="form-label">Select CSV File</label>
                            <input type="file" class="form-control" id="file" name="file" accept=".csv" required>
                            <div class="form-text">
                                Upload a CSV file with a 'domain' or 'website' column containing company domains.
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6>CSV Format Example:</h6>
                                    <pre class="mb-0"><code>domain
example.com
techstartup.io
businesscorp.com</code></pre>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-upload"></i> Upload & Enrich Leads
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h5>ðŸ“Š Step 1</h5>
                                    <p class="small">Upload CSV with domains</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h5>ðŸ¤– Step 2</h5>
                                    <p class="small">AI enriches company data</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h5>ðŸ“¥ Step 3</h5>
                                    <p class="small">Download enriched leads</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center">
                <a asp-controller="Leads" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-list"></i> View Previous Jobs
                </a>
            </div>
        </div>
    </div>
</div>
