@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeadForgeAI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/themes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body class="theme-dark">
    <div class="auth-page">
        <div class="auth-background"></div>

        <div class="auth-container">
            <div class="auth-card">
                <a href="@Url.Action("Login", "Auth")" class="auth-back">
                    <i class="bi bi-arrow-left"></i>
                    Back to sign in
                </a>

                <div class="auth-header">
                    <a href="/" class="auth-logo">
                        <i class="bi bi-robot"></i>
                        <span>LeadForge<strong>AI</strong></span>
                    </a>
                    <h1 class="auth-title">Reset your password</h1>
                    <p class="auth-subtitle">Enter your email and we'll send you a reset link</p>
                </div>

                <div class="auth-info" id="successMessage" style="display: none;">
                    <i class="bi bi-check-circle-fill"></i>
                    <div>
                        <strong>Check your email</strong>
                        <p style="margin: 0; font-size: 0.9rem;">We've sent password reset instructions to your email address.</p>
                    </div>
                </div>

                <form method="post" class="auth-form" id="forgotPasswordForm">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="email">Email address</label>
                        <div class="input-with-icon">
                            <i class="bi bi-envelope-fill"></i>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                class="form-control"
                                placeholder="you@example.com"
                                required
                                autocomplete="email"
                            />
                        </div>
                        <div class="validation-message" id="emailValidation"></div>
                    </div>

                    <button type="submit" class="btn-auth" id="submitBtn">
                        <i class="bi bi-send-fill"></i>
                        <span>Send Reset Link</span>
                    </button>
                </form>

                <div class="auth-footer">
                    Remember your password? <a href="@Url.Action("Login", "Auth")">Sign in</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/theme-switcher.js" asp-append-version="true"></script>
    <script>
        const emailInput = document.getElementById('email');
        const emailValidation = document.getElementById('emailValidation');
        const submitBtn = document.getElementById('submitBtn');
        const forgotPasswordForm = document.getElementById('forgotPasswordForm');
        const successMessage = document.getElementById('successMessage');

        // Email validation
        emailInput.addEventListener('input', function() {
            const email = this.value.trim();
            if (email.length === 0) {
                emailValidation.innerHTML = '';
                submitBtn.disabled = false;
                return;
            }

            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            if (!emailRegex.test(email)) {
                emailValidation.innerHTML = '<i class="bi bi-exclamation-circle-fill"></i> Please enter a valid email address';
                emailValidation.className = 'validation-message error';
                submitBtn.disabled = true;
            } else {
                emailValidation.innerHTML = '<i class="bi bi-check-circle-fill"></i> Valid email';
                emailValidation.className = 'validation-message success';
                submitBtn.disabled = false;
            }
        });

        // Form submission
        forgotPasswordForm.addEventListener('submit', function(e) {
            e.preventDefault();

            submitBtn.disabled = true;
            submitBtn.innerHTML = '<div class="spinner"></div><span>Sending...</span>';

            // Simulate API call (replace with actual implementation)
            setTimeout(() => {
                // Hide form and show success message
                forgotPasswordForm.style.display = 'none';
                successMessage.style.display = 'flex';

                // Optionally redirect after a delay
                setTimeout(() => {
                    window.location.href = '@Url.Action("Login", "Auth")';
                }, 5000);
            }, 1500);
        });

        // Focus first input
        emailInput.focus();
    </script>
</body>
</html>
