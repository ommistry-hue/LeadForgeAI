@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeadForgeAI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/themes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body class="theme-dark">
    <div class="auth-page">
        <div class="auth-background"></div>

        <div class="auth-container">
            <div class="auth-card">
                <div class="auth-header">
                    <a href="/" class="auth-logo">
                        <i class="bi bi-robot"></i>
                        <span>LeadForge<strong>AI</strong></span>
                    </a>
                    <h1 class="auth-title">Welcome back</h1>
                    <p class="auth-subtitle">Sign in to your account to continue</p>
                </div>

                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="auth-error">
                        <i class="bi bi-exclamation-circle-fill"></i>
                        <div>
                            <strong>Unable to sign in</strong>
                            <div>@Html.ValidationSummary(false, "", new { @class = "m-0" })</div>
                        </div>
                    </div>
                }

                <form method="post" class="auth-form" id="loginForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div class="form-group">
                        <label for="email">Email address</label>
                        <div class="input-with-icon">
                            <i class="bi bi-envelope-fill"></i>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                class="form-control"
                                placeholder="you@example.com"
                                required
                                autocomplete="email"
                                data-validate="email"
                            />
                        </div>
                        <div class="validation-message" id="emailValidation"></div>
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <div class="input-with-icon">
                            <i class="bi bi-lock-fill"></i>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                class="form-control"
                                placeholder="Enter your password"
                                required
                                autocomplete="current-password"
                            />
                            <button type="button" class="password-toggle" id="togglePassword">
                                <i class="bi bi-eye-fill"></i>
                            </button>
                        </div>
                        <div class="validation-message" id="passwordValidation"></div>
                    </div>

                    <div class="form-extras">
                        <div class="custom-checkbox">
                            <input type="checkbox" id="rememberMe" name="rememberMe" />
                            <label for="rememberMe">Remember me</label>
                        </div>
                        <a href="@Url.Action("ForgotPassword", "Auth")" class="forgot-link">
                            Forgot password?
                        </a>
                    </div>

                    <button type="submit" class="btn-auth" id="submitBtn">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>Sign In</span>
                    </button>
                </form>

                <div class="auth-footer">
                    Don't have an account? <a href="@Url.Action("Register", "Auth")">Sign up</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/theme-switcher.js" asp-append-version="true"></script>
    <script>
        // Real-time validation
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const emailValidation = document.getElementById('emailValidation');
        const passwordValidation = document.getElementById('passwordValidation');
        const togglePassword = document.getElementById('togglePassword');
        const submitBtn = document.getElementById('submitBtn');
        const loginForm = document.getElementById('loginForm');

        // Email validation
        emailInput.addEventListener('input', function() {
            const email = this.value.trim();
            if (email.length === 0) {
                emailValidation.innerHTML = '';
                return;
            }

            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            if (!emailRegex.test(email)) {
                emailValidation.innerHTML = '<i class="bi bi-exclamation-circle-fill"></i> Please enter a valid email address';
                emailValidation.className = 'validation-message error';
            } else {
                emailValidation.innerHTML = '<i class="bi bi-check-circle-fill"></i> Valid email';
                emailValidation.className = 'validation-message success';
            }
        });

        // Password validation
        passwordInput.addEventListener('input', function() {
            const password = this.value;
            if (password.length === 0) {
                passwordValidation.innerHTML = '';
                return;
            }

            if (password.length < 6) {
                passwordValidation.innerHTML = '<i class="bi bi-exclamation-circle-fill"></i> Password must be at least 6 characters';
                passwordValidation.className = 'validation-message error';
            } else {
                passwordValidation.innerHTML = '';
            }
        });

        // Toggle password visibility
        togglePassword.addEventListener('click', function() {
            const type = passwordInput.type === 'password' ? 'text' : 'password';
            passwordInput.type = type;

            const icon = this.querySelector('i');
            if (type === 'password') {
                icon.className = 'bi bi-eye-fill';
            } else {
                icon.className = 'bi bi-eye-slash-fill';
            }
        });

        // Form submission
        loginForm.addEventListener('submit', function(e) {
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<div class="spinner"></div><span>Signing in...</span>';
        });

        // Focus first input
        emailInput.focus();
    </script>
</body>
</html>
