@model IEnumerable<LeadForgeAI.Models.Job>
@{
    ViewData["Title"] = "My Jobs - LeadForge AI";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-briefcase"></i> My Enrichment Jobs
        </h2>
        <a asp-controller="Upload" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Upload
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <h4>No jobs yet!</h4>
            <p>Upload your first CSV to get started with lead enrichment.</p>
            <a asp-controller="Upload" asp-action="Index" class="btn btn-primary mt-3">
                <i class="bi bi-upload"></i> Upload CSV
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var job in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@job.FileName</h5>
                                <span class="badge @(job.Status == "Completed" ? "bg-success" : job.Status == "Failed" ? "bg-danger" : "bg-warning")">
                                    @job.Status
                                </span>
                            </div>

                            <div class="row text-center mb-3">
                                <div class="col-4">
                                    <div class="text-muted small">Total</div>
                                    <div class="h4 mb-0">@job.TotalLeads</div>
                                </div>
                                <div class="col-4">
                                    <div class="text-muted small">Processed</div>
                                    <div class="h4 mb-0">@job.ProcessedLeads</div>
                                </div>
                                <div class="col-4">
                                    <div class="text-muted small">Credits</div>
                                    <div class="h4 mb-0">@job.CreditsUsed</div>
                                </div>
                            </div>

                            <div class="small text-muted mb-3">
                                <div><i class="bi bi-clock"></i> Created: @job.CreatedAt.ToString("MMM dd, yyyy HH:mm")</div>
                                @if (job.CompletedAt.HasValue)
                                {
                                    <div><i class="bi bi-check-circle"></i> Completed: @job.CompletedAt.Value.ToString("MMM dd, yyyy HH:mm")</div>
                                }
                            </div>

                            <div class="d-grid gap-2">
                                <a asp-action="ViewJob" asp-route-id="@job.Id" class="btn btn-primary">
                                    <i class="bi bi-eye"></i> View Leads
                                </a>
                                @if (job.Status == "Completed")
                                {
                                    <a asp-action="ExportCsv" asp-route-id="@job.Id" class="btn btn-success">
                                        <i class="bi bi-download"></i> Export CSV
                                    </a>
                                }
                                <form asp-action="DeleteJob" asp-route-id="@job.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this job?');" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
