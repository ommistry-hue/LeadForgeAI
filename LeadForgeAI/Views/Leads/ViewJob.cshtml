@model LeadForgeAI.Models.Job
@{
    ViewData["Title"] = $"Job: {Model.FileName} - LeadForge AI";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="bi bi-file-earmark-text"></i> @Model.FileName
            </h2>
            <span class="badge @(Model.Status == "Completed" ? "bg-success" : Model.Status == "Failed" ? "bg-danger" : "bg-warning")">
                @Model.Status
            </span>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Jobs
            </a>
            @if (Model.Status == "Completed")
            {
                <a asp-action="ExportCsv" asp-route-id="@Model.Id" class="btn btn-success">
                    <i class="bi bi-download"></i> Export CSV
                </a>
            }
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted small">Total Leads</div>
                    <div class="h3 mb-0">@Model.TotalLeads</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted small">Processed</div>
                    <div class="h3 mb-0">@Model.ProcessedLeads</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted small">Credits Used</div>
                    <div class="h3 mb-0">@Model.CreditsUsed</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted small">Avg Score</div>
                    <div class="h3 mb-0">@(Model.Leads.Any() ? Model.Leads.Average(l => l.LeadScore).ToString("F1") : "N/A")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-table"></i> Enriched Leads (@Model.Leads.Count)
            </h5>
        </div>
        <div class="card-body p-0">
            @if (!Model.Leads.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted">No leads available.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Domain</th>
                                <th>Company</th>
                                <th>Industry</th>
                                <th>Size</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Score</th>
                                <th>Country</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lead in Model.Leads)
                            {
                                <tr>
                                    <td>
                                        <a href="https://@lead.Domain" target="_blank" class="text-decoration-none">
                                            @lead.Domain <i class="bi bi-box-arrow-up-right small"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <strong>@lead.CompanyName</strong>
                                        @if (!string.IsNullOrEmpty(lead.CompanyDescription))
                                        {
                                            <br/>
                                            <small class="text-muted">@lead.CompanyDescription</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@lead.Industry</span>
                                    </td>
                                    <td>@lead.EmployeeCount</td>
                                    <td>
                                        <a href="mailto:@lead.BusinessEmail">@lead.BusinessEmail</a>
                                    </td>
                                    <td>@lead.Phone</td>
                                    <td>
                                        <span class="badge @(lead.LeadScore >= 8 ? "bg-success" : lead.LeadScore >= 5 ? "bg-warning" : "bg-secondary")">
                                            @lead.LeadScore/10
                                        </span>
                                    </td>
                                    <td>@lead.Country</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
